{
  "$schema":
    "https://raw.githubusercontent.com/microsoft/botbuilder-dotnet/gabog/SkillsSecondPass/prototypes/skill-manifest-schema-1-0-preview-1.json",
  "$id": "SkillBot",
  "name": "Demo skill bot with dialogs",
  "version": "1.0",
  "description": "Complex sample that defines types inline (without dependencies section)",
  "publisherName": "Microsoft",
  "privacyUrl": "https://myskill.com/privacy.html",
  "copyright": "Copyright (c) Microsoft Corporation. All rights reserved.",
  "license": "",
  "iconUrl": "https://myskill.com/icon.png",
  "tags": [
    "sample",
    "authentication",
    "travel"
  ],
  "endpoints":
  [
    {
      "name": "production",
      "protocol": "BotFrameworkV3",
      "description": "Production  endpoint for SkillBot.",
      "endpointUrl": "http://contoso.com/api/messages",
      "msAppId": "00000000-0000-0000-0000-000000000000"
    },
    {
      "name": "staging",
      "protocol": "BotFrameworkV3",
      "description": "Staging endpoint for SkillBot.",
      "endpointUrl": "http://staging.contoso.com/api/messages",
      "msAppId": "11111111-1111-1111-1111-111111111111"
    }
  ],
  "dispatchModels": {
    "languages": {
      // At least one
      "en": {
        "contentType": "application/lu",
        "url": "http://sample.com/SkillBot-en.lu"
      },
      "es": {
        "contentType": "application/lu",
        "url": "http://sample.com/SkillBot-es.lu"
      }
    },
    // optional
    "intents": {
      "*": "#/activities/message",
      "getWeather": "#/activities/messageWithLocation",
      "bookAFlight": "#/activities/messageWithUserProfile"
    }
  },
  "activities": {
    "message": {
      "type": "message"
    },
    "messageWithLocale": {
      "type": "message",
      "value": {
        "type": "object",
        "properties": {
          "locale": {
            "type": "string",
            "description": "The current user's locale ISO code"
          }
        }
      }
    },
    "messageWithUserProfile": {
      "type": "message",
      "value": {
        "type": "object",
        "description": "User Profile properties",
        "properties": {
          "name": {
            "type": "string",
            "description": "The current user's name  (OPTIONAL)"
          },
          "zip": {
            "type": "string",
            "description": "The current user's zip code (OPTIONAL)"
          }
        }
      }
    },
    "BookFlightEvent": {
      "description": "Defines how to send an 'BookFlight' Event Activity to the skill.",
      "type": "event",
      "name": "BookFlight",
      "value": {
        "type": "object",
        "required": [
          "origin"
        ],
        "properties": {
          "origin": {
            "type": "string",
            "description": "this is the origin city for the flight"
          },
          "destination": {
            "type": "string",
            "description": "this is the destination city for the flight"
          },
          "date": {
            "type": "string",
            "description": "The date for the flight in YYYY-MM-DD format"
          }
        }
      },
      "resultValue": {
        "type": "object",
        "required": [
          "origin"
        ],
        "properties": {
          "origin": {
            "type": "string",
            "description": "this is the origin city for the flight"
          },
          "destination": {
            "type": "string",
            "description": "this is the destination city for the flight"
          },
          "date": {
            "type": "string",
            "description": "The date for the flight in YYYY-MM-DD format"
          }
        }
      }
    },
    "GetWeather": {
      "description": "Defines how to send an 'GetWeather' Invoke Activity to the skill.",
      "type": "invoke",
      "name": "GetWeather",
      "value": {
        "type": "object",
        "description": "Location metadata",
        "properties": {
          "latitude": {
            "type": "number",
            "title": "Latitude"
          },
          "longitude": {
            "type": "number",
            "title": "Longitute"
          },
          "postalCode": {
            "type": "string",
            "title": "Postal code"
          }
        }
      },
      "resultValue": {
        "type": "array",
        "description": "Array of forecasts for the next week.",
        "items": [
          {
            "type": "string"
          }
        ]
      }
    }
  },
  "activitiesSent": {
    "FlightUpdatedEvent": {
      "type": "event",
      "name": "FlightUpdated",
      "value": {
        "type": "object",
        "description": "Event which is sent by the skill when there is an update in flight info",
        "properties": {
          "flightNumber": {
            "type": "string"
          },
          "departureDate": {
            "type": "string"
          },
          "departureTime": {
            "type": "string"
          }
        }
      }
    }
  }
}