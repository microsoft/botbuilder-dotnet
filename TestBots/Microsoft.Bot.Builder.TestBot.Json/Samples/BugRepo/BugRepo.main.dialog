{
    "$schema": "../../testbot.schema",
    "$kind": "Microsoft.AdaptiveDialog",
    "autoEndDialog": false,
    "recognizer": {
        "$kind": "Microsoft.RegexRecognizer",
        "intents": [
            {
                "intent": "Test",
                "pattern": "test"
            },
            {
                "intent": "TextInput",
                "pattern": "textinput"
            },
            {
                "intent": "End",
                "pattern": "end"
            }
        ]
    },
    "triggers": [
        {
            "$kind": "Microsoft.OnIntent",
            "intent": "End",
            "actions": [
                {
                    "$kind": "Microsoft.EndDialog"
                }
            ]
        },
        {
            "$kind": "Microsoft.OnIntent",
            "intent": "Test",
            "actions": [
                {
                    "$kind": "Microsoft.BeginDialog",
                    "dialog": "AskForName",
                    "resultProperty": "$name"
                },
                {
                    "$kind": "Microsoft.SendActivity",
                    "activity": "Hello ${dialog.name}, nice to meet you!"
                },
                {
                    "$kind": "Microsoft.BeginDialog",
                    "dialog": "AskForName",
                    "resultProperty": "$name"
                },
                {
                    "$kind": "Microsoft.SendActivity",
                    "activity": "Hello ${dialog.name}, nice to meet you!"
                }
            ]
        }
    ]
}