{
  "$schema": "http://json.schemastore.org/template",
  "author": "Microsoft",
  "classifications": [
    "Bot",
    "Bot Framework",
    "Empty Bot",
    "Conversational AI",
    "AI"
  ],
  "defaultName": "EmptyBot",
  "groupIdentity": "Microsoft.BotFramework.CSharp.EmptyBot",
  "identity": "Microsoft.BotFramework.CSharp.EmptyBot",
  "name": "Bot Framework Empty Bot (v4.18.1)",
  "preferNameDirectory": true,
  "sourceName": "Microsoft.BotFramework.EmptyBot",
  "shortName": "emptybot",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "description": "A project template for creating a Bot Framework v4 bot. This template shows the minimum code required to build a bot.",
  "symbols": {
    "currentBuildVersion": {
      "type": "generated",
      "generator": "constant",
      "parameters": {
        "value": "v4.18.1"
      },
      "replaces": "__vX.X.X__"
    },
    "output": {
      "type": "parameter",
      "replaces": "{OUTPUT_PATH}",
      "defaultValue": "EmptyBot"
    },
    "name": {
      "type": "parameter",
      "replaces": "__PROJECT_NAME__",
      "defaultValue": "EmptyBot"
    },
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net6.0",
          "description": "Target net6.0"
        }
      ],
      "replaces": "__NETCOREAPP_VERSION__",
      "defaultValue": "net6.0"
    },
    "ReadmeNetCorePrereqVersion": {
      "type":"generated",
      "generator": "switch",
      "dataType": "string",
      "replaces": "__NETCORE_VERSION__",
      "parameters": {
        "evaluator": "C++",
        "cases": [
          {
            "condition": "(Framework==\"net6.0\")",
            "value": "6.0"
          }
        ]
      }
    },
    "SkipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "If specified, skips the automatic NuGet restore of the project on create.",
      "isRequired": false
    }
  },
  "sources": [
    {
      "modifiers": [
        {"exclude": [ "**/NuGet.Config", "**/.DS_Store" ]}
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(!SkipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        { "text": "Run 'dotnet restore'" }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}
